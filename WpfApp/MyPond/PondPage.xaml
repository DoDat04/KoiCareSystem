<Page x:Class="WpfApp.PondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PondPage">

    <Grid Background="White">
        <TextBlock Text="My Pond"
             FontSize="24"
             FontWeight="Bold" Height="50" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="798" TextAlignment="Center"
             />
        <TextBlock Text="{Binding MemberIdText}"
              FontSize="24"
              FontWeight="Bold" 
              Height="50" 
              Margin="0,50,100,0" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Top" 
              Width="798" 
              TextAlignment="Center"/>
    </Grid>
</Page>
