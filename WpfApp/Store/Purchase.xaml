<Page x:Class="WpfApp.Store.Purchase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Store"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Purchase">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="✅" Margin="0,0,10,0" Foreground="Green" HorizontalAlignment="Center" FontSize="50"/>
        <TextBlock Text="Product purchased successfully!" Margin="0,0,10,0" Foreground="Green" FontSize="30" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
